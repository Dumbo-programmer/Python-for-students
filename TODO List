def todo_list():
    print("Welcome to the To-Do List!")
    tasks = []

    while True:
        action = input("Enter 'add' to add a task, 'remove' to remove a task, 'view' to view tasks, 'quit' to quit: ").lower()

        if action == 'add':
            task = input("Enter the task: ")
            tasks.append(task)
        elif action == 'remove':
            task = input("Enter the task to remove: ")
            if task in tasks:
                tasks.remove(task)
            else:
                print("Task not found")
        elif action == 'view':
            print("Your tasks:")
            for task in tasks:
                print(f"- {task}")
        elif action == 'quit':
            break
        else:
            print("Invalid action")

if __name__ == "__main__":
    todo_list()
